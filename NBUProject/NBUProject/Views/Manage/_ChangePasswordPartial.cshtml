@model NBUProject.Models.ChangePasswordViewModel


<div id="ControlNavigationId">

    <div id="wrapper">
        <div id="page-wrapper">
            <div id="page-inner">

                <div class="container">
                    <script type="text/javascript">
                        document.title = 'Change Password';
                        window.history.pushState(
                            null,
                            null,
                            '/Manage/ChangePassword'
                            );
                    </script>

                    <br /><br />

                    <h2 class="text-center" style="color:#808080">Change Password Form</h2>

                    <br /><br />

                    <div class="col-md-offset-3 col-xs-12 col-sm-6 col-md-6 panelMy">
                        <div class="panel-body">

                            @using (Ajax.BeginForm("ChangePassword", "Manage", new AjaxOptions()
                            {
                                UpdateTargetId = "ControlNavigationId",
                                InsertionMode = InsertionMode.Replace,
                                HttpMethod = "Post"
                            },
new { @class = "form-horizontal", role = "form" }))
                            {
                            @Html.AntiForgeryToken()
                                <hr />
                                <div class="text-center">
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                    <div class="text-danger">@TempData["changePassword"]</div>
                                    <br />
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-4 col-sm-4 col-md-4 control-label">Old Password:</div>
                                    <div class="col-md-7">
                                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control col-xs-8 col-sm-8 col-md-8" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-4 col-sm-4 col-md-4 control-label">New Password:</div>
                                    <div class="col-md-7">
                                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control col-xs-8 col-sm-8 col-md-8" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-4 col-sm-4 col-md-4 control-label">Confirm Password:</div>
                                    <div class="col-md-7">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-xs-8 col-sm-8 col-md-8" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="text-center">
                                        <input type="submit" value="Save" class="btn btn-success btn-lg" id="saveQuestionBtnId" />
                                        @Ajax.ActionLink("Back", "IndexPartialManage", "Manage",
                                new AjaxOptions
                                {
                                    UpdateTargetId = "ControlNavigationId",
                                    InsertionMode = InsertionMode.Replace,
                                    HttpMethod = "Get"
                                },
                                new { @class = "btn btn-warning btn-lg manageBackBtn" })
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
