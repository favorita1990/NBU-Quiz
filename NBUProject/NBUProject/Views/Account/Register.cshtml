@model NBUProject.Models.RegisterViewModel
@{
    ViewBag.Title = "Create an account";
}



@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal smaller-form", role = "form" }))
{
    <h2>@ViewBag.Title</h2>
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control login-inputs", placeholder = ViewData.ModelMetadata.Watermark = "Email" })
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control login-inputs", placeholder = ViewData.ModelMetadata.Watermark = "Password" })
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control login-inputs", placeholder = ViewData.ModelMetadata.Watermark = "Confirm Password" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <input id="login-button" type="submit" class="btn btn-success" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
